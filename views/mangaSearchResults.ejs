<!-- views/index.ejs -->
<!doctype html>
<html>
<head>
    <title>Test</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
    <link rel="stylesheet" type="text/css" href="/style/style.css">
    <style>
        body        { padding-top:80px; }
        #mascot { background: url('/img/megumin.svg') no-repeat right bottom transparent; }

        #mascot {
            position: fixed;
            z-index: 1;
            bottom: 0;
            right: 0;
            width: 30vh;
            max-width: 100%;
            height: 30vh;
            -webkit-tap-highlight-color: transparent;
            pointer-events: auto;
            cursor: pointer;
        }

        #mascot.custom-mascot {
            background-size: contain;
        }
    </style>
</head>
<body>

<header class="cd-auto-hide-header" style='background-color:#ff5050'>
    <div class="logo"><a href="/"><h5><b>Muri Manga Reader</b></h5></a></div>

    <nav class="cd-primary-nav">
        <a href="#cd-navigation" class="nav-trigger">
            <span>
                <em aria-hidden="true"></em>
                Menu
            </span>
        </a> <!-- .nav-trigger -->

        <ul id="cd-navigation">
            <li><a href="/">Home</a></li>
            <li><a href="/batoto/searchResults">Search Manga</a></li>
        </ul>
    </nav> <!-- .cd-primary-nav -->
</header> <!-- .cd-auto-hide-header -->

<main class="cd-main-content">


<div class="container">

    <div class="jumbotron text-center">
        <h1><span class="fa fa-lock"></span> Search For Mangas</h1>
    </div>
    <form id="search" method="get" action="http://dokidoki.duckdns.org:8080/batoto/searchResults">
        <input type="text" id="searchKeyword" name="searchKeyword">
        <input type="submit" >
    </form>
    <% if(manga) { %>
    <h3> Please press the "Link to Singular Page" for testing, thanks </h3>
    <table id="myTable">
      <tr>
        <th> </th>
        <th> Manga Name </th>
        <th> Bato.to URL </th>
        <th> Author </th>
        <th> Last Updated </th>
      </tr>
        <% manga.forEach(function(item, index) { %>
          <tr>
            <td> <a href="./manga/<%= item.mangaUrl %>"><img src="<%= item.mangaImageUrl %>" style="height:200px"></a> </td>
            <td> <a href="./manga/<%= item.mangaUrl %>"><%= item.mangaName %> </a></td>
            <td> <a href="http://bato.to/comic/_/comics/<%= item.mangaUrl %>"> <%= item.mangaUrl %></a> </td>
            <td> <%= item.author %> </td>
            <td> <%= item.lastUpdated %> </td>
          </tr>
        <% }); %>
    </table>
    <% } %>

</div>
<audio id="explosion" hidden="" preload="none">
    <source src="https://a.doko.moe/vrlrtw.mp3" type="audio/mpeg">
</audio>
<div id="mascot" class="hide-xs" onclick="playVoice();"></div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.0.0/jquery.min.js"></script>
<script>
    if( !window.jQuery ) document.write('<script src="js/jquery-3.0.0.min.js"><\/script>');
</script>
<script src="/js/navbar.js"></script>
</main>
<script>
function playVoice() {
    var explosion = document.getElementById("explosion");
    var nyanpassu = document.getElementById("nyanpassu");
    var kawaii    = document.getElementById("kawaii");
    if (explosion) {
        explosion.volume = 0.2;
        explosion.play();
    }
    else if (kawaii) {
        kawaii.volume = 0.2;
        kawaii.play();
    }
    else {
        nyanpassu.volume = 0.2;
        nyanpassu.play();
    }
}
</script>

</body>
</html>
